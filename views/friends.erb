<div class="container">

  <h1>友達</h1>





  <div class="list-groups">
      <% @friends.each do |friend| %>

        <a href="/friends/<%= friend.friend.id %>" class="list-group-item list-group-item-action">
          <span class="mr-3">
              <img class="rounded-circle" src="<%= friend.friend.img %>" style="width: 50px; height: 50px; object-fit: cover">
					</span>

          <span>
             <%= friend.friend.name %>
          </span>
       </a>



      <% end %>
  </div>

</div>
